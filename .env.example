# Bot configuration
BOT_TOKEN=your_bot_token_here
CLIENT_ID=your_client_id_here
GUILD_ID=your_guild_id_here_for_dev
DEV_GUILD_ID=your_dev_guild_id_here

# Command Registration
SYNC_GLOBAL=false  # Set to 'true' to register commands globally, 'false' for guild-only

# Database configuration
DB_PATH=./data/database.sqlite

# Event configuration
EVENT_PROBABILITY=0.05
MIN_MESSAGES_BETWEEN_EVENTS=20

# Economy configuration
WORK_MIN_AMOUNT=50
WORK_MAX_AMOUNT=150
DAILY_AMOUNT=500
WEEKLY_AMOUNT=2000

# API Keys
WEATHER_API_KEY=your_openweathermap_api_key_here  # For weather command

# Bot Owner ID (for admin commands)
OWNER_ID=your_discord_user_id